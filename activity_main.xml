<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/add"
        android:layout_width="103.5dp"
        android:layout_height="100dp"
        android:onClick="add"
        android:text="+"
        android:textSize="36sp"
        app:layout_constraintBottom_toTopOf="@+id/button17"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/sub"
        android:layout_width="103.5dp"
        android:layout_height="100dp"
        android:onClick="sub"
        android:text="-"
        android:textSize="36sp"
        app:layout_constraintBottom_toTopOf="@+id/button24"
        app:layout_constraintStart_toEndOf="@+id/add" />

    <Button
        android:id="@+id/div"
        android:layout_width="103.5dp"
        android:layout_height="100dp"
        android:onClick="div"
        android:text="รท"
        android:textSize="36sp"
        app:layout_constraintBottom_toTopOf="@+id/result"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/mult" />

    <Button
        android:id="@+id/mult"
        android:layout_width="103.5dp"
        android:layout_height="100dp"
        android:onClick="mult"
        android:text="x"
        android:textSize="36sp"
        app:layout_constraintBottom_toTopOf="@+id/button28"
        app:layout_constraintStart_toEndOf="@+id/sub" />

    <Button
        android:id="@+id/button27"
        android:layout_width="103.5dp"
        android:layout_height="100dp"
        android:onClick="number"
        android:text="5"
        android:textSize="36sp"
        app:layout_constraintBottom_toTopOf="@+id/button18"
        app:layout_constraintStart_toEndOf="@+id/button17" />

    <Button
        android:id="@+id/button22"
        android:layout_width="103.5dp"
        android:layout_height="100dp"
        android:onClick="number"
        android:text="1"
        android:textSize="36sp"
        app:layout_constraintBottom_toTopOf="@+id/button4"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/button21"
        android:layout_width="103.5dp"
        android:layout_height="100dp"
        android:onClick="number"
        android:text="6"
        android:textSize="36sp"
        app:layout_constraintBottom_toTopOf="@+id/button19"
        app:layout_constraintStart_toEndOf="@+id/button24" />

    <Button
        android:id="@+id/button24"
        android:layout_width="103.5dp"
        android:layout_height="100dp"
        android:onClick="number"
        android:text="8"
        android:textSize="36sp"
        app:layout_constraintBottom_toTopOf="@+id/button27"
        app:layout_constraintStart_toEndOf="@+id/button17" />

    <Button
        android:id="@+id/button28"
        android:layout_width="103.5dp"
        android:layout_height="100dp"
        android:onClick="number"
        android:text="9"
        android:textSize="36sp"
        app:layout_constraintBottom_toTopOf="@+id/button21"
        app:layout_constraintStart_toEndOf="@+id/button24" />

    <Button
        android:id="@+id/button4"
        android:layout_width="103.5dp"
        android:layout_height="100dp"
        android:onClick="number"
        android:text="0"
        android:textSize="36sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/floatingPoint"
        android:layout_width="103.5dp"
        android:layout_height="100dp"
        android:onClick="floatingPoint"
        android:text="."
        android:textSize="36sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/button4" />

    <Button
        android:id="@+id/button2"
        android:layout_width="103.5dp"
        android:layout_height="100dp"
        android:onClick="clear"
        android:text="AC"
        android:textSize="36sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/floatingPoint" />

    <Button
        android:id="@+id/button17"
        android:layout_width="103.5dp"
        android:layout_height="100dp"
        android:onClick="number"
        android:text="7"
        android:textSize="36sp"
        app:layout_constraintBottom_toTopOf="@+id/button25"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/button25"
        android:layout_width="103.5dp"
        android:layout_height="100dp"
        android:onClick="number"
        android:text="4"
        android:textSize="36sp"
        app:layout_constraintBottom_toTopOf="@+id/button22"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/button18"
        android:layout_width="103.5dp"
        android:layout_height="100dp"
        android:onClick="number"
        android:text="2"
        android:textSize="36sp"
        app:layout_constraintBottom_toTopOf="@+id/floatingPoint"
        app:layout_constraintStart_toEndOf="@+id/button17" />

    <Button
        android:id="@+id/button19"
        android:layout_width="103.5dp"
        android:layout_height="100dp"
        android:onClick="number"
        android:text="3"
        android:textSize="36sp"
        app:layout_constraintBottom_toTopOf="@+id/button2"
        app:layout_constraintStart_toEndOf="@+id/button18" />

    <Button
        android:id="@+id/result"
        android:layout_width="101dp"
        android:layout_height="401dp"
        android:onClick="result"
        android:text="="
        android:textAlignment="center"
        android:textSize="36sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/button21" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#000000"
        android:text="0"
        android:textAlignment="textEnd"
        android:textColor="#FFFFFF"
        android:textSize="70sp"
        app:layout_constraintBottom_toTopOf="@+id/sub"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:gravity="end" />

</androidx.constraintlayout.widget.ConstraintLayout>
